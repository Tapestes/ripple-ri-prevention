<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:background="#404040" android:orientation="vertical"
	android:padding="10dip">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#FFFFFF"
		android:gravity="center" android:text="Hold Short Settings"
		android:textSize="20dp" android:textStyle="bold" />
	<View android:layout_width="fill_parent" android:layout_height="2dip"
		android:background="#FFFFFF" />


	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:paddingLeft="5dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Announce Runway Names"
			android:textColor="#FFFFFF" android:textSize="18dp" android:gravity="center_vertical"
			android:layout_weight="1" />
		<CheckBox android:id="@+id/announce" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:visibility="gone">
		<TextView android:paddingLeft="5dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Tone for all Runways"
			android:textColor="#FFFFFF" android:textSize="18dp" android:gravity="center_vertical"
			android:layout_weight="1" />
		<CheckBox android:id="@+id/tone" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>

</LinearLayout>

